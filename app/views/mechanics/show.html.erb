<p><%= "Name: #{@mechanic.name}" %></p>

<p><%= "Years of Experience: #{@mechanic.years_experience}"%>

<section class="assigned-rides">
  <% @mechanic.rides.each do |ride| %>
    <p><%= ride.name %></p>
  <% end %>
</section>

<p><%= button_to "Add Ride to Mechanic", "/ride_mechanics/new", method: :get, params: {mechanic_id: @mechanic.id} %></p>